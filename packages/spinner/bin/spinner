#!/usr/bin/env bash

shopt -s expand_aliases

PACKAGES_PATH=$(dirname $(dirname $(realpath $(dirname $0))))

alias color=$PACKAGES_PATH/color/bin/color

spinner_1()
{
  local spinner="â—¼"
  local color="bgreen"

  while :
  do
    if [[ $color = "bgreen" ]]; then
      color="byellow"
    else
      color="bgreen"
    fi

    for i in `seq 0 4`
    do
      color fg $color $spinner -ne
      sleep 0.03
    done

    echo -en "\033[5D"
  done
}

$1
