#!/usr/bin/env bash

shopt -s expand_aliases

PACKAGES_PATH=$(dirname $(dirname $(realpath $(dirname $0))))

alias color=$PACKAGES_PATH/color/bin/color
alias log=$PACKAGES_PATH/log/bin/log

spinner_1()
{
  local spinner="â—¼"
  local color="bgreen"

  echo -ne '\015\033[2K'
  printf " %.0s" $(seq 0 $(($2-1)))
  echo -ne '  \033[s'
  echo -ne $3
  echo -ne "\033[u\033[$(($2+2))D"

  while :
  do
    if [[ $color = "bgreen" ]]; then
      color="byellow"
    else
      color="bgreen"
    fi

    for i in `seq 0 $(($2-1))`
    do
      color fg $color $spinner -ne
      sleep $1
    done

    echo -en "\033[$2D"
  done
}

spinner_type="spinner_1"
sleep_time=0.2
length=5
message=
args=()

while [ "$#" -gt 0 ]; do
  case "${1^^}" in
    "--TYPE" | "-T")
      if [[ $2 != "spinner_1" ]]; then
        log error "type '$2' is invalid."
      fi

      spinner_type=$2

      shift
      shift
    ;;
    "--TIME" | "-S")
      sleep_time=$2

      shift
      shift
    ;;
    "--LENGTH" | "-L")
      length=$2

      shift
      shift
    ;;
    "--MESSAGE" | "-M")
      message="$2"

      shift
      shift
    ;;
    *)
      args+=("$1")

      shift
    ;;
  esac
done

$spinner_type $sleep_time $length "$message" ${args[@]}
