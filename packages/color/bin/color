#!/usr/bin/env bash

PACKAGES_PATH=$(dirname $(realpath $(dirname $0)))

source $PACKAGES_PATH/source/vars.sh

color_bg() {
  echo ${*:3} "${BG_COLORS[${1^^}]}$2$RESET"
}

color_fg() {
  echo ${*:3} "${FG_COLORS[${1^^}]}$2$RESET"
}

color_fb() {
  echo ${*:4} $(color_bg $1 "$(color_fg $2 "$3")")
}

if [[ $1 = 'fb' ]]; then
  color_$1 $2 $3 "$4" ${*:5}
else
  color_$1 $2 "$3" ${*:4}
fi
