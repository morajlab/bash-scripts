#!/usr/bin/env bash

shopt -s expand_aliases

PACKAGES_PATH=$(dirname $(dirname $(realpath $(dirname $0))))

alias color=$PACKAGES_PATH/color/bin/color
alias log=$PACKAGES_PATH/log/bin/log

__show_cursor() {
  echo -e '\033[?25h'
}

trap '__show_cursor' EXIT

pi_1()
{
  local element="â—¼"
  local color="bgreen"

  echo -ne '\033[?25l'
  echo -ne '\015\033[2K'
  printf " %.0s" $(seq 0 $(($2-1)))
  echo -ne '  \033[s'
  echo -ne $3
  echo -ne "\033[u\033[$(($2+2))D"

  while :
  do
    if [[ $color = "bgreen" ]]; then
      color="byellow"
    else
      color="bgreen"
    fi

    for i in `seq 0 $(($2-1))`
    do
      color fg $color $element -ne
      sleep $1
    done

    echo -en "\033[$2D"
  done
}

pi_type="pi_1"
sleep_time=0.2
length=5
message=
args=()

while [ "$#" -gt 0 ]; do
  case "${1^^}" in
    "--TYPE" | "-T")
      pi_type=$2

      shift
      shift
    ;;
    "--TIME" | "-S")
      sleep_time=$2

      shift
      shift
    ;;
    "--LENGTH" | "-L")
      length=$2

      shift
      shift
    ;;
    "--MESSAGE" | "-M")
      message="$2"

      shift
      shift
    ;;
    *)
      args+=("$1")

      shift
    ;;
  esac
done

if [[ $pi_type = __* ]] || [ "$(type -t $pi_type)" != 'function' ]; then
  log error "type '$pi_type' is invalid."
  exit 1
fi

$pi_type $sleep_time $length "$message" ${args[@]}
